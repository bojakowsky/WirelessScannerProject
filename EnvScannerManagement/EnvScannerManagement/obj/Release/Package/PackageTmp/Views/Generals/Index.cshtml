@model IEnumerable<Database.General>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>General data</h2>
@Html.TextBox("SearchValue", null, new { placeholder = "Search..." })
<input type="button" value="Search" id="SearchButton" />
<script>
    $('#SearchButton').on('click', function () {
        var url = '@Url.Action("Index", "Generals")';
        location.href = url + "?searchValue=" + $("#SearchValue").val();
    });
</script>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Android API
        </th>
        <th>
            No. of wifi connections
        </th>
        <th>
            No. of bluetooth connections
        </th>
        <th>
            GPS Latitude
        </th>
        <th>
            GPS Longtitude
        </th>
        <th>
            Date & time
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Device.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AndroidAPI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfWifiConnections)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfBtConnections)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GPSlatitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GPSLongtitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAndTime)
        </td>
    </tr>
}

</table>
